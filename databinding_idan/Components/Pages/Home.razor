@page "/"
@using databinding_idan
@inject NavigationManager Navigation

<div class="form-container">
    <h3>Registration Form</h3>
    <EditForm Model="@person" OnValidSubmit="HandleSubmit" FormName="Registration">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="email">Email</label>
            <InputText id="email" class="form-control" @bind-Value="person.Email" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <InputText id="password" class="form-control" type="password" @bind-Value="person.Password" />
        </div>

        <button type="submit" class="btn-submit">Submit</button>
    </EditForm>
</div>

@code {
    private Person person = new Person();

    private void HandleSubmit()
    {
        // Handle form submission
        Navigation.NavigateTo("/success");
    }
}
